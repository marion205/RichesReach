{
  "Version":"2012-10-17",
  "Statement":[
    {
      "Sid":"ECR",
      "Effect":"Allow",
      "Action":[
        "ecr:GetAuthorizationToken",
        "ecr:BatchCheckLayerAvailability",
        "ecr:CompleteLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:InitiateLayerUpload",
        "ecr:PutImage",
        "ecr:BatchGetImage",
        "ecr:DescribeRepositories",
        "ecr:DescribeImages"
      ],
      "Resource":"*"
    },
    {
      "Sid":"ECS",
      "Effect":"Allow",
      "Action":[
        "ecs:DescribeClusters",
        "ecs:DescribeServices",
        "ecs:UpdateService",
        "ecs:DescribeTaskDefinition",
        "ecs:RegisterTaskDefinition",
        "ecs:ListTaskDefinitions",
        "ecs:ListTasks",
        "ecs:DescribeTasks",
        "ecs:RunTask",
        "ecs:TagResource"
      ],
      "Resource":"*"
    },
    {
      "Sid":"LogsRead",
      "Effect":"Allow",
      "Action":[
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams",
        "logs:GetLogEvents",
        "logs:FilterLogEvents"
      ],
      "Resource":"*"
    },
    {
      "Sid":"PassTaskExecRole",
      "Effect":"Allow",
      "Action":[ "iam:PassRole" ],
      "Resource":"arn:aws:iam::498606688292:role/ecsTaskExecutionRole",
      "Condition": { "StringEquals": { "iam:PassedToService": "ecs-tasks.amazonaws.com" } }
    },
    {
      "Sid":"PassTaskRole",
      "Effect":"Allow",
      "Action":[ "iam:PassRole" ],
      "Resource":"arn:aws:iam::498606688292:role/ecsTaskRole",
      "Condition": { "StringEquals": { "iam:PassedToService": "ecs-tasks.amazonaws.com" } }
    },
    {
      "Sid":"SecretsAndParamsOptional",
      "Effect":"Allow",
      "Action":[
        "secretsmanager:GetSecretValue",
        "ssm:GetParameter",
        "ssm:GetParameters"
      ],
      "Resource":"*"
    }
  ]
}
