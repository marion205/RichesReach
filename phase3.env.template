# Phase 3 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# GLOBAL SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
PHASE3_ENABLED=true
AI_ROUTER_ENABLED=true
ANALYTICS_ENABLED=true
PERFORMANCE_OPTIMIZATION_ENABLED=true

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_DEFAULT_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7
AI_TIMEOUT_SECONDS=30
AI_RETRY_ATTEMPTS=3
AI_COST_OPTIMIZATION=true
AI_PERFORMANCE_TRACKING=true

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
ANALYTICS_REALTIME_BI=true
ANALYTICS_MARKET=true
ANALYTICS_USER_BEHAVIOR=true
ANALYTICS_PREDICTIVE=true
ANALYTICS_REFRESH_INTERVAL=30
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_WEBSOCKET=true
ANALYTICS_WEBSOCKET_PORT=8001

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Cache Configuration
PERFORMANCE_CACHE_ENABLED=true
PERFORMANCE_CACHE_TTL=3600
PERFORMANCE_CACHE_MAX_SIZE=100
PERFORMANCE_CACHE_COMPRESSION=true

# CDN Configuration
PERFORMANCE_CDN_ENABLED=true
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id_here

# Database Optimization
PERFORMANCE_DB_OPTIMIZATION=true
PERFORMANCE_QUERY_CACHE=true
PERFORMANCE_CONNECTION_POOLING=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=your_database_host_here
DATABASE_PORT=5432
DATABASE_NAME=richesreach
DATABASE_USER=admin
DATABASE_PASSWORD=your_database_password_here
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_QUERY_TIMEOUT=60
DATABASE_QUERY_CACHE=true
DATABASE_CONNECTION_POOLING=true
DATABASE_QUERY_OPTIMIZATION=true
DATABASE_SLOW_QUERY_LOGGING=true
DATABASE_SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=your_redis_host_here
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_CLUSTER_ENABLED=false
REDIS_SENTINEL_ENABLED=false
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=your_s3_bucket_here
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id_here
ECS_CLUSTER=richesreach-cluster
ECS_SERVICE=richesreach-service
ECR_REPOSITORY=richesreach

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_PROMETHEUS=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_CLOUDWATCH=true
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
HEALTH_CHECKS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Polygon API
POLYGON_API_KEY=your_polygon_api_key_here

# Finnhub API
FINNHUB_API_KEY=your_finnhub_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here

# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# CoinGecko API
COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ML_LEARNING=true
ENABLE_AI_OPTIONS=true
ENABLE_SWING_TRADING=true
ENABLE_DAY_TRADING=true
ENABLE_CRYPTO_TRADING=true
ENABLE_PORTFOLIO_OPTIMIZATION=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_SOCIAL_FEATURES=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100
RATE_LIMIT_WINDOW_SIZE=60

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE_MB=100
CACHE_COMPRESSION_ENABLED=true
CACHE_SERIALIZATION_METHOD=pickle
CACHE_EVICTION_POLICY=lru

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8001
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CONNECTION_TIMEOUT=300

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email_here
SMTP_PASSWORD=your_email_password_here
SMTP_USE_TLS=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_QUEUE_SIZE=1000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_s3_bucket_here

