{
  "family": "create-appuser-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::498606688292:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::498606688292:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "create-appuser",
      "image": "postgres:15",
      "essential": true,
      "command": [
        "psql",
        "-h", "riches-reach-postgres.cmhsue8oy30k.us-east-1.rds.amazonaws.com",
        "-p", "5432",
        "-U", "richesreach",
        "-d", "postgres",
        "-c", "CREATE DATABASE appdb;",
        "-c", "CREATE ROLE appuser WITH LOGIN PASSWORD 'AppUser2024!SecurePass';",
        "-c", "GRANT ALL PRIVILEGES ON DATABASE appdb TO appuser;",
        "-c", "\\c appdb",
        "-c", "ALTER SCHEMA public OWNER TO appuser;",
        "-c", "ALTER DEFAULT PRIVILEGES IN SCHEMA public GRANT ALL ON TABLES TO appuser;",
        "-c", "ALTER DEFAULT PRIVILEGES IN SCHEMA public GRANT ALL ON SEQUENCES TO appuser;"
      ],
      "environment": [
        {
          "name": "PGPASSWORD",
          "value": "RichesReach2024!MasterPass"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/create-appuser",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
