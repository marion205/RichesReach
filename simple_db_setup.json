{
  "family": "db-setup-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::498606688292:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::498606688292:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "db-setup",
      "image": "postgres:15",
      "essential": true,
      "environment": [
        { "name": "PGHOST", "value": "riches-reach-postgres.cmhsue8oy30k.us-east-1.rds.amazonaws.com" },
        { "name": "PGPORT", "value": "5432" },
        { "name": "PGDATABASE", "value": "postgres" },
        { "name": "PGUSER", "value": "richesreach" }
      ],
      "secrets": [
        { "name": "PGPASSWORD", "valueFrom": "arn:aws:secretsmanager:us-east-1:498606688292:secret:rr-postgres-flFgNi" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/riches-reach-ai",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "db-setup"
        }
      },
      "command": [
        "psql",
        "-c",
        "CREATE DATABASE appdb; CREATE ROLE appuser WITH LOGIN PASSWORD 'AppUser2024!SecurePass'; GRANT ALL PRIVILEGES ON DATABASE appdb TO appuser;"
      ]
    }
  ]
}
