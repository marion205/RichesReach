{
  "family": "richesreach-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::498606688292:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::498606688292:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "richesreach-container",
      "image": "498606688292.dkr.ecr.us-east-1.amazonaws.com/richesreach:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DEBUG",
          "value": "False"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "app.richesreach.net,localhost"
        },
        {
          "name": "USE_OPENAI",
          "value": "true"
        },
        {
          "name": "OPENAI_MODEL",
          "value": "gpt-4o-mini"
        },
        {
          "name": "OPENAI_MAX_TOKENS",
          "value": "1200"
        },
        {
          "name": "OPENAI_TIMEOUT_MS",
          "value": "12000"
        },
        {
          "name": "OPENAI_ENABLE_FALLBACK",
          "value": "true"
        }
      ],
      "secrets": [
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:498606688292:secret:openai-api-key-SguHie"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/richesreach",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
