# Alpaca Broker API Configuration
# Copy these values to your .env file and fill in production values from Alpaca

# Broker API Production Keys (from Alpaca after approval)
ALPACA_BROKER_API_KEY=your_broker_api_key_here
ALPACA_BROKER_API_SECRET=your_broker_api_secret_here

# Broker API Base URL
# Production: https://broker-api.alpaca.markets
# Sandbox: https://broker-api.sandbox.alpaca.markets
ALPACA_BROKER_BASE_URL=https://broker-api.sandbox.alpaca.markets

# Data API Base URL (for market data)
ALPACA_DATA_BASE_URL=https://data.alpaca.markets

# Webhook Secret (for HMAC verification of webhooks from Alpaca)
ALPACA_WEBHOOK_SECRET=your_webhook_secret_here

# IP Allow-list (comma-separated, if required by Alpaca)
# ALPACA_ALLOWED_IPS=1.2.3.4,5.6.7.8

# Trading Settings (Guardrails)
MAX_PER_ORDER_NOTIONAL=10000
MAX_DAILY_NOTIONAL=50000
MAX_POSITION_SIZE=50000

# Trading Hours (ET timezone)
TRADING_HOURS_START=09:30
TRADING_HOURS_END=16:00

# Symbol Whitelist (comma-separated, or use environment-specific list)
# SYMBOL_WHITELIST=SPY,QQQ,AAPL,MSFT,GOOGL,AMZN,META,NVDA,TSLA

# AWS Secrets Manager (if using)
# AWS_SECRETS_MANAGER_REGION=us-east-1
# AWS_SECRETS_MANAGER_SECRET_NAME=richesreach/alpaca-broker-api

