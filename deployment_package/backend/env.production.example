# ============================================================================
# RICHESREACH PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual production values
# DO NOT commit .env to version control
# ============================================================================

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================
# Generate new SECRET_KEY: python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here

DEBUG=False
ENVIRONMENT=production

# Production domain(s) - comma separated
ALLOWED_HOSTS=api.richesreach.com,www.richesreach.com,richesreach.com

DOMAIN_NAME=richesreach.com

# ============================================================================
# DATABASE CONFIGURATION (AWS RDS PostgreSQL)
# ============================================================================
DB_NAME=richesreach_prod
DB_USER=appuser
DB_PASSWORD=your-secure-db-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

DATABASE_URL=postgresql://your-db-user:your-secure-db-password@your-rds-endpoint.region.rds.amazonaws.com:5432/postgres

# ============================================================================
# REDIS CONFIGURATION (AWS ElastiCache)
# ============================================================================
# UPDATE: Replace with your production ElastiCache endpoint
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

CELERY_BROKER_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0
CELERY_RESULT_BACKEND=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/1

# ============================================================================
# AI & ML SERVICES
# ============================================================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
USE_OPENAI=true

# ============================================================================
# MARKET DATA APIs
# ============================================================================
# Get keys from respective services:
# - Finnhub: https://finnhub.io/register
# - Polygon: https://polygon.io/
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
# - News API: https://newsapi.org/register
FINNHUB_API_KEY=your-finnhub-api-key-here
POLYGON_API_KEY=your-polygon-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
NEWS_API_KEY=your-news-api-key-here

# ============================================================================
# BROKER & TRADING APIs
# ============================================================================
# ⚠️ CRITICAL: Get production keys from https://alpaca.markets
ALPACA_BROKER_API_KEY=your-alpaca-broker-production-key
ALPACA_BROKER_API_SECRET=your-alpaca-broker-production-secret
ALPACA_BROKER_BASE_URL=https://broker-api.alpaca.markets
ALPACA_WEBHOOK_SECRET=your-alpaca-webhook-secret

# ============================================================================
# BANKING INTEGRATION (Yodlee)
# ============================================================================
USE_YODLEE=true
YODLEE_BASE_URL=https://api.yodlee.com/ysl
YODLEE_CLIENT_ID=your-yodlee-client-id
YODLEE_SECRET=your-yodlee-client-secret
YODLEE_APP_ID=your-yodlee-app-id
YODLEE_FASTLINK_URL=https://fastlink.yodlee.com
YODLEE_WEBHOOK_SECRET=your-yodlee-webhook-secret

BANK_TOKEN_ENCRYPTION=fernet
# Generate new key: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
BANK_TOKEN_ENC_KEY=your-fernnet-encryption-key-here

# ============================================================================
# SBLOC INTEGRATION
# ============================================================================
USE_SBLOC_MOCK=false
USE_SBLOC_AGGREGATOR=true

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_ACCOUNT_ID=your-aws-account-id
AWS_REGION=us-east-1
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
DATA_LAKE_BUCKET=your-data-lake-bucket-name

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@richesreach.com

# ============================================================================
# FRONTEND & API URLs
# ============================================================================
API_BASE_URL=https://api.richesreach.com
FRONTEND_URL=https://app.richesreach.com
WS_URL=wss://api.richesreach.com/ws/

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================
SENTRY_DSN=your-sentry-dsn

# ============================================================================
# BLOCKCHAIN/WEB3
# ============================================================================
# Get from https://cloud.walletconnect.com
WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
# Get from https://www.alchemy.com/
ALCHEMY_API_KEY=your-alchemy-api-key
SEPOLIA_ETH_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-alchemy-key

# ============================================================================
# STREAMING & KAFKA CONFIGURATION
# ============================================================================
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=your-kafka-bootstrap-servers
KAFKA_GROUP_ID=riches-reach-producer
KAFKA_TOPIC_PREFIX=richesreach
ENABLE_STREAMING=true
STREAMING_MODE=production

# ============================================================================
# DATA LAKE CONFIGURATION
# ============================================================================
# Data Lake is enabled and configured above (DATA_LAKE_BUCKET)
# S3 bucket for storing raw, processed, and curated data
# Lifecycle policies automatically move old data to cheaper storage

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ML_SERVICES=true
ENABLE_MONITORING=true

