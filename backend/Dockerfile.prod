# syntax=docker/dockerfile:1.6
FROM python:3.11-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# curl for healthcheck
RUN --mount=type=cache,target=/var/cache/apt \
    --mount=type=cache,target=/var/lib/apt \
    apt-get update && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements with cache busting
COPY backend/requirements.txt /tmp/requirements.txt
ARG REQUIREMENTS_SHA
RUN --mount=type=cache,target=/root/.cache/pip \
    python -m pip install -U pip \
 && pip install --no-cache-dir -r /tmp/requirements.txt \
 && pip install --prefer-binary "gunicorn>=21" "uvicorn[standard]>=0.30" "whitenoise>=6"

# copy source
COPY backend/backend/ /app/

# ensure no baked DB sneaks in even if present in repo history
RUN rm -f db.sqlite3

# ASGI server
CMD ["gunicorn","richesreach.asgi:application","-k","uvicorn.workers.UvicornWorker","-b","0.0.0.0:8000","--workers","3","--timeout","60"]