# Django Configuration
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=app.richesreach.net,localhost
CORS_ALLOWED_ORIGINS=https://app.richesreach.net,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/richesreach

# API Keys - Set these in your environment or AWS Secrets Manager
OPENAI_API_KEY=your-openai-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
FINNHUB_API_KEY=your-finnhub-api-key-here
POLYGON_API_KEY=your-polygon-api-key-here
NEWS_API_KEY=your-news-api-key-here

# OpenAI Configuration
USE_OPENAI=true
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1200
OPENAI_TIMEOUT_MS=12000
OPENAI_ENABLE_FALLBACK=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Settings
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true

# Monitoring
MONITORING_ENABLED=true
MONITORING_ALERT_EMAIL=alerts@richesreach.net
