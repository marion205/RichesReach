# RichesReach Production Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.richesreach.com

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/richesreach_prod

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stock Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINNHUB_API_KEY=your-finnhub-api-key
POLYGON_API_KEY=your-polygon-api-key

# News API
NEWS_API_KEY=your-news-api-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# AWS (if using S3 for static files)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
